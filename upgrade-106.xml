<!DOCTYPE modification SYSTEM "http://www.simplemachines.org/xml/modification">
<modification xmlns="http://www.simplemachines.org/xml/modification" xmlns:smf="http://www.simplemachines.org/">
	
	<id>kriation:gCalSync</id>
	<version>1.0.7</version>

	<file name="$themedir/ManageCalendar.template.php">
		<operation>
			<search position="replace"><![CDATA[				<td><input type="text" name="gCal_user" value="', $modSettings['gCal_user'], '" size="40" /></td>]]></search>
			<add><![CDATA[				<td><input type="text" name="gCal_user" value="', !empty($modSettings['gCal_user']) ? $modSettings['gCal_user'] : '', '" size="40" /></td>]]></add>
		</operation>

		<operation>
			<search position="replace"><![CDATA[				<td><input type="password" name="gCal_pass" value="', $modSettings['gCal_pass'], '" size="40" /></td>]]></search>
			<add><![CDATA[				<td><input type="password" name="gCal_pass" value="', !empty($modSettings['gCal_pass']) ? $modSettings['gCal_pass'] : '', '" size="40" /></td>]]></add>
		</operation>
	</file>
</modification>



